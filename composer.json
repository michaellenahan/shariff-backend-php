{
    "name": "erkenes/heise-shariff",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/erkenes/shariff-backend-php.git"
        }
    ],
    "keywords": [
        "heise",
        "social buttons",
        "shariff"
    ],
    "description": "PHP backend for Shariff. Shariff enables website users to share their favorite content without compromising their privacy.",
    "homepage": "https://github.com/erkenes/shariff-backend-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Philipp Busse",
            "email": "pmb@heise.de"
        },
        {
            "name": "Enes Erk",
            "email": "support@eneserk.de"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "guzzlehttp/guzzle": "^6.5.8 || ^7.4.1",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Heise\\Shariff\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Heise\\Tests\\Shariff\\": "tests"
        }
    },
    "replace": {
        "heise/shariff": "*"
    }
}
